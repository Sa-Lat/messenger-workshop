{% extends 'base.html.twig' %}

{% block title %}Register bet{% endblock %}

{% block body %}

    <div class="container">
        {% if message %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endif %}

        <div class="text-center py-5">
            <h1>Register a bet</h1>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    <div class="form-group">
                        <label for="user">User</label>
                        <input class="form-control" type="text" name="user"/>
                    </div>
                    <div class="form-group">
                        <label for="game">Game</label>
                        <input class="form-control" type="text" name="game"/>
                    </div>
                    <div class="form-group">
                        <label for="leftScore">LeftScore</label>
                        <input class="form-control" type="text" name="leftScore"/>
                    </div>
                    <div class="form-group">
                        <label for="rightScore">RightScore</label>
                        <input class="form-control" type="text" name="rightScore"/>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-large btn-block" type="submit">place bet</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center py-5">
            <h1>Bets</h1>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Game</th>
                        <th>User</th>
                        <th>Left Score</th>
                        <th>Right Score</th>
                        <th>State</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for bet in bets %}
                        <tr>
                            <td>{{ bet.game }}</td>
                            <td>{{ bet.user }}</td>
                            <td>{{ bet.leftScore }}</td>
                            <td>{{ bet.rightScore }}</td>
                            <td>{{ bet.state }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="text-center py-5">
            <h1>Report Game</h1>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <form method="post" action="/report">
                    <div class="form-group">
                        <label for="game">Game</label>
                        <input class="form-control" type="text" name="game"/>
                    </div>
                    <div class="form-group">
                        <label for="leftScore">LeftScore</label>
                        <input class="form-control" type="text" name="leftScore"/>
                    </div>
                    <div class="form-group">
                        <label for="rightScore">RightScore</label>
                        <input class="form-control" type="text" name="rightScore"/>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-large btn-block" type="submit">report game</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
